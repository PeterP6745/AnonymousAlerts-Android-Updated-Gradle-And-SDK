<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/your_message_has_been_sent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="25dp"

        />

    <ImageView
        android:id="@+id/image_view_confirmation_smiley"
        android:layout_margin="7dp"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/ic_mood_black_48dp"
        android:backgroundTint="#FFC400"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/confirmation_code"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/confirmation_code_text_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="50255"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:background="@drawable/text_view_background_confirmationcode"
    />

</LinearLayout>